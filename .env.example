# Environment Variables Template
# Copy this file to .env and fill in your actual values

# Database Configuration
NETLIFY_DATABASE_URL="postgresql://username:password@hostname:5432/database"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"

# Node Environment
NODE_ENV="development"

# Frontend Configuration (for Vite)
VITE_USE_API="false"  # Set to "true" to use Netlify Functions instead of direct DB access

# Netlify Functions Base URL (for local development)
VITE_API_BASE_URL="http://localhost:8888/.netlify/functions"